{
  "version": 2,
  "functions": {
    "api/*.js": { "runtime": "nodejs20.x", "maxDuration": 30 }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "env": {
    "MONGODB_URI": "@MONGODB_URI"
  }
}
